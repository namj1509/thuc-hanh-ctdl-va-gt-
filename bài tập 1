#include <iostream>
using namespace std;
int sumEven(int arr[], int size, int index) {
  
    if (index == size) {
        return 0;
    }
      if (arr[index] % 2 == 0) {
        return arr[index] + sumEven(arr, size, index+1);
    }
  và tiếp tục duyệt các phần tử tiếp theo
    return sumEven(arr, size, index+1);
}

int main() {
    int size;
    cout << "Nhap kich thuoc mang: ";
    cin >> size;
    int arr[size];
    cout << "Nhap mang:" << endl;
    for (int i = 0; i < size; i++) {
        cin >> arr[i];
    }

      int sum = sumEven(arr, size, 0);
    cout << "Tong cac so chan trong mang la: " << sum << endl;

    return 0;
}
